				mode4 { /* 1776x1776_4lane_raw12_linear_60fps */
					mclk_khz = "24000";
					num_lanes = "4";
					tegra_sinterface = "serial_c";
					phy_mode = "DPHY";
					discontinuous_clk = "no";
					dpcm_enable = "false";
					cil_settletime = "0";
					lane_polarity = "0";

					active_w = "1776";
					active_h = "1776";
					mode_type = "bayer";
					pixel_phase = "rggb";
					csi_pixel_bit_depth = "12";
					dynamic_pixel_bit_depth = "12";
					readout_orientation = "0";
					line_length = "3940";
					inherent_gain = "1";
					mclk_multiplier = "39.6";
					pix_clk_hz = "594000000";

					gain_factor = "1000";
					min_gain_val = "1"; /* dB */
					max_gain_val = "72000"; /* dB */
					step_gain_val = "300"; /* 0.3 */
					default_gain = "1";
					min_hdr_ratio = "1";
					max_hdr_ratio = "1";
					framerate_factor = "1000000";
					min_framerate = "60000000";
					max_framerate = "60000000";
					step_framerate = "1";
					default_framerate = "60000000";
					exposure_factor = "1000000";
					min_exp_time = "9"; 		/*us, 2 lines*/
