					cil_settletime = "0";
					lane_polarity = "0";

					active_w = "1776";
					active_h = "1776";
					mode_type = "bayer";
					pixel_phase = "rggb";
					csi_pixel_bit_depth = "12";
					dynamic_pixel_bit_depth = "12";
					readout_orientation = "0";
					line_length = "3940";
					inherent_gain = "1";
					mclk_multiplier = "39.6";
					pix_clk_hz = "297000000";

					gain_factor = "1000";
					min_gain_val = "1"; /* dB */
					max_gain_val = "72000"; /* dB */
					step_gain_val = "300"; /* 0.3 */
					default_gain = "1";
					min_hdr_ratio = "1";
					max_hdr_ratio = "1";
					framerate_factor = "1000000";
					min_framerate = "30000000";
					max_framerate = "30000000";
					step_framerate = "1";
					default_framerate = "30000000";
					exposure_factor = "1000000";
					min_exp_time = "18"; 		/*us, 2 lines*/
					max_exp_time = "30000";		/*us, 3934 lines*/
					step_exp_time = "1";
					default_exp_time = "30000";/* us */
					embedded_metadata_height = "1";
				};

				mode2 { /* 3536X3536_4LANE_RAW10_DOL2_30FPS */
					mclk_khz = "24000";
					num_lanes = "4";
					tegra_sinterface = "serial_c";
					phy_mode = "DPHY";
					discontinuous_clk = "yes";
					dpcm_enable = "false";
					cil_settletime = "0";
					lane_polarity = "0";

					active_w = "3568";    
					active_h = "7410";
					mode_type = "bayer_wdr_dol";
					pixel_phase = "rggb";
					csi_pixel_bit_depth = "10";
					dynamic_pixel_bit_depth = "10";
					readout_orientation = "0";
					line_length = "3872";
					inherent_gain = "1";
					mclk_multiplier = "25";
					pix_clk_hz = "950400000";		

					gain_factor = "1000";
					min_gain_val = "1"; 		/* 0 dB */
					max_gain_val = "72000"; /* dB */
					step_gain_val = "300"; /* 0.3 */
					default_gain = "1";
					min_hdr_ratio = "16";
					max_hdr_ratio = "16";
					framerate_factor = "1000000";
					min_framerate = "30000000";
					max_framerate = "30000000";
					step_framerate = "1";
					default_framerate = "30000000";
					exposure_factor = "1000000";
					min_exp_time = "17"; 		/*us, 4 lines*/
					max_exp_time = "30000";		/*us, 7856-24 lines*/
					step_exp_time = "1";
					default_exp_time = "30000";/* us */
					embedded_metadata_height = "1";
					
					// /* WDR related settings */
					num_of_exposure = "2";
					num_of_ignored_lines = "24"; 
					num_of_lines_offset_0 = "145";
					num_of_ignored_pixels = "16";
					num_of_left_margin_pixels = "8";
					num_of_right_margin_pixels = "8";
				};

				mode3 { /* 3552x3552_4lane_raw10_linear_60fps */
					mclk_khz = "24000";
					num_lanes = "4";
					tegra_sinterface = "serial_c";
					phy_mode = "DPHY";
					discontinuous_clk = "yes";
					dpcm_enable = "false";
					cil_settletime = "0";
					lane_polarity = "0";

					active_w = "3552";
					active_h = "3552";
					mode_type = "bayer";
					pixel_phase = "rggb";
					csi_pixel_bit_depth = "10";
					dynamic_pixel_bit_depth = "10";
					readout_orientation = "0";
					line_length = "3940";
					inherent_gain = "1";
					mclk_multiplier = "39.6";
					pix_clk_hz = "950400000";

					gain_factor = "1000";
					min_gain_val = "1"; /* dB */
					max_gain_val = "72000"; /* dB */
